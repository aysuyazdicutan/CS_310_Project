rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Habits collection - users can only access their own habits
    match /habits/{habitId} {
      // Allow read if user is authenticated and owns the habit
      allow read: if isOwner(resource.data.createdBy);
      
      // Allow create if user is authenticated and sets themselves as creator
      allow create: if isAuthenticated() 
        && request.resource.data.createdBy == request.auth.uid
        && request.resource.data.createdAt is timestamp;
      
      // Allow update if user owns the habit
      allow update: if isOwner(resource.data.createdBy)
        && request.resource.data.createdBy == resource.data.createdBy;
      
      // Allow delete if user owns the habit
      allow delete: if isOwner(resource.data.createdBy);
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

